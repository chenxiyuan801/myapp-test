<div class="row">
  <% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <% if product.main_product_image.present? %>
      <%= link_to image_tag(product.main_product_image.image.url(:middle), alt: product.title), product_path(product) %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic") %>
      <% end %>
      <div class="caption">
        <h4><%= link_to product.title, product_path(product), class: 'title' %></h4>
        <p>
          <strong>¥<%= product.price %></strong>
          <span class="msrp">¥<%= product.msrp %></span>
        </p>
        <p><%= show_add_to_cart product, html_class: "btn-xs" %></p>
      </div>
    </div>
  </div>
  <% end -%>
</div>

<%= will_paginate @products %>
